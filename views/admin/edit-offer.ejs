<script>
  $(document).ready(function(){
    $('form').submit(function(event){
      event.preventDefault();

      var offerName = $('#offerName').val();
      var startingDate = $('#startingDate').val();
      var expiryDate = $('#expiryDate').val();
      var percentage = $('#percentage').val();


      // Reset error messages is empty
      $('.error-message').text('');


      // Check if fields are not empty
      if(!offerName){
        $('#offerNameError').text('Please enter Offer Name.')

        setTimeout(()=>{
          $('#offerNameError').text('')
        },5000);

      };

      if(!startingDate){
        $('#startingDateError').text('Please enter starting Date');

        setTimeout(()=>{
          $('#startingDateError').text('');
        },5000);

      };

      if(!expiryDate){
        $('#expiryDateError').text('Please select Expiry Date.');

        setTimeout(()=>{
          $('#expiryDateError').text('');
        },5000);

      }else if(new Date(startingDate) > new Date(expiryDate)){
        
        $('#expiryDateError').text('The expiry date must be after the starting date.');
        
        setTimeout(()=>{
          $('#expiryDateError').text('');
        },5000);
      
    };

      if(!percentage){
        $('#percentageError').text('Please enter Discount');

        setTimeout(()=>{
          $('#percentageError').text('');
        },5000);

      }else if(percentage<0 || percentage>90){
        $('#percentageError').text('Discount should be greater than zero and less than 90.');

        setTimeout(()=>{
          $('#percentageError').text('');
        },5000);

      };

      // If all fields are filled, submit the form
      if(offerName && startingDate && expiryDate && percentage && startingDate < expiryDate ){
        this.submit();
      }

    });
  });
  
</script>

<script>

    // Function to hide the message after a certain timeout
    function hideMessage() {
    let messageElement = document.getElementById('message');
    if (messageElement) {
      setTimeout(function () {
        messageElement.style.display = 'none';
      }, 3000); // 3000 milliseconds (3 seconds) timeout,
    }
  }
    // Call the function when the page loads
    document.addEventListener('DOMContentLoaded', hideMessage);
</script>

