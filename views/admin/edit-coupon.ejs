  <div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3"><%= title %></h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="container-fluid">
                        <form class="row g-3" action="" method="post" id="couponForm">
                          <% if(couponData){%>
                            <div class="col-md-6">
                              <label for="inputCouponName" class="form-label">Coupon Name</label>
                              <input type="text" name="couponName" class="form-control" id="couponName" placeholder="Coupon Name" value="<%=couponData.couponName%>"> 
                              <div id="couponNameError" class="error-message text-danger"></div>
                            </div>
                            <div class="col-md-6">
                              <label for="inputCouponCode" class="form-label">Coupon Code</label>
                              <input type="text" class="form-control" id="couponCode" name="couponCode" placeholder="Coupon Code" value="<%=couponData.couponCode%>">
                            </div>
                            <div class="col-md-6">
                                <label for="inputDiscountAmount" class="form-label">Discount Amount</label>
                                <input type="number" class="form-control" id="discountAmount" name="discountAmount" placeholder="Discount Amount" value="<%=couponData.discountAmount%>">
                                <div id="discountAmountError" class="error-message text-danger"></div>
                              </div>
                              <div class="col-md-6">
                                <label for="inputValidFrom" class="form-label">Valid From</label>
                                <input type="date" class="form-control" id="validFrom" name="validFrom" value="<%=couponData.validFrom.toISOString().slice(0, 10)%>">
                              </div>
                              <div class="col-md-6">
                                <label for="inputValidTo" class="form-label">Valid To</label>
                                <input type="date" class="form-control" id="validTo" name="validTo" value="<%=couponData.validTo.toISOString().slice(0, 10)%>">
                                <div id="validToError" class="error-message text-danger"></div>
                              </div>
                              <div class="col-md-6">
                                <label for="inputMiniMarginAmount" class="form-label">Minimum Margin Amount</label>
                                <input type="number" class="form-control" id="minimumSpend" name="minimumSpend" placeholder="Margin Amount" value="<%=couponData.minimumSpend%>">
                              </div>
                              <div class="col-md-6">
                                <label for="inputUserLimit" class="form-label">User Limit</label>
                                <input type="number" class="form-control" id="usersLimit" name="usersLimit" placeholder="User Limit" value="<%=couponData.usersLimit%>">
                                <div id="userLimitError" class="error-message text-danger"></div>
                              </div>
                              <div class="col-md-6">
                                <label for="inputDescription" class="form-label">Description</label>
                                <input type="text" class="form-control" id="description" name="description" placeholder="Description" value="<%=couponData.description%>">
                              </div>
                              <div class="btn-control">
                                <input type="hidden" name="id" value="<%=couponData._id%>">
                                <button type="submit" class="btn btn-info mr-2" id="submitBtn">Update Coupon</button>
                              </div>
                              <% }else{ %>
                                <p>No data available for this coupon.</p>
                                <% } %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
