  <div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card my-4">
          <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-primary shadow-primary border-radius-lg">
              <div class="row justify-content-lg-between align-items-center margin-0 py-0">
                <div class="col-md-12 col-lg-6 mb-2 mb-lg-0">
                  <h6 class="text-white text-capitalize ps-3"><%=title%></h6>
                </div>
                <div class="col-md-12 col-lg-6">
                  <div class="d-flex justify-content-end p-2">
                    <a class="nav-link text-white " href="/admin/add-coupon">
                      <button type="button" class="btn bg-gradient-success ms-3 mt-2">
                        <i class="material-icons opacity-10">add</i> Add Coupon</button></a>
                    
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="card-body px-0 pb-2">
            <div class="table-responsive p-0">
                <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                    <thead>
                      <tr>
                        <th class="th-sm">No</th>
                        <th class="th-sm name">Name</th>
                        <th class="th-sm">Code</th>
                        <th class="th-sm">Min-Spend</th>
                        <th class="th-sm">Discount</th>
                        <th class="th-sm">Valid From</th>
                        <th class="th-sm">Valid To</th>
                        <th class="th-sm">User Limit</th>
                        <th class="th-sm">Used Users</th>
                        <th class="th-sm">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <%let count=1; %>
                      <% couponItems.forEach((coupon)=>{%>
                        <% if(couponItems.length>0){%>
                          <tr class="table-row">
                        <td><%= count %></td>

                        <td><%=coupon.couponName%></td>
                        <td><%=coupon.couponCode%></td>
                        <td><%=coupon.minimumSpend%></td>
                        <td><%=coupon.discountAmount%></td>
                        
                        <td><%= coupon.validFrom ? coupon.validFrom.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }).replace(/\//g, '-') : '' %></td>
                        <td><%= coupon.validTo ? coupon.validTo.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }).replace(/\//g, '-') : '' %></td>

                        <td><%=coupon.usersLimit%></td>
                        <td><%=coupon.usedUsers.length%></td>
                        <div class="badge-control d-flex justify-content-center">
                        <td><a href="/admin/edit-coupon?id=<%=coupon._id%>" class="badge badge-sm bg-gradient-warning list-unlist">Edit</a>
                          <a href="#" class="badge badge-sm bg-gradient-dark list-unlist" data-bs-toggle="modal" data-bs-target="#exampleModal<%= coupon._id %>">Delete</a>
                      </div>
                    </tr>
                      <% count++ %>
                      <% } %>
                      <% }); %>
                    </tbody>
                  </table>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>


    
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
    <!-------------------------------------- Modal for conform ----------------------------------------------->
    <% couponItems.forEach((coupon)=>{ %>
    <div class="modal fade" id="exampleModal<%= coupon._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="text-align: center;">
                  <h1><i class="fas fa-exclamation-triangle text-warning"></i></h1>
                  <p> Are you sure you want to delete this coupon?</p>
                  </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Not Now</button>
                  <a type="button" href="/admin/delete-coupon?id=<%=coupon._id%>" class="btn btn-danger">Delete Now</a>
              </div>
                </div>
            </div>
          </div>
        </div>
      <% }); %>
        
