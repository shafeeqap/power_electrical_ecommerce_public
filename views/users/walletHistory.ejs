<div class="col-md-8">
    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
               
              <% if (walletHistory.length > 0) { %>
              <table class="table">
                        <thead>
                            <tr>
                              <th>#</th>
                              <th>Date</th>
                              <th>Details</th>
                              <th>TransactionType</th>
                              <th>Amount</th>
                              <th>Current Balance</th>
                            </tr>
                        </thead>  
                        <tbody>
                            <% let count = 1 %>
                            <% walletHistory.forEach((data) => { %>
                                <tr>
                                    <th scope="row"><%= count %></th>
                                    <% if(data.transactionDate){%>
                                    <td><%= data.transactionDate.toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %></td>
                                    <% }else{%>
                                      <td>N/A</td>
                                      <% } %>
                                    <td><%= data.transactionDetails %></td>
                                    <td><%= data.transactionType %></td>
                                    <td><%= data.transactionAmount %></td>
                                    <td><%= data.currentBalance %></td>
                                </tr>
                                <% count++ %>
                            <% }); %>
                            <% }else{%>
                              <div class="text-center">
                                <h3>No wallet transactions</h3>
                                <img src="" alt="">
                                <a href="/product" class="btn btn-primary">continue shopping</a>
                            </div>
                            <% } %>
                            </tbody>
                    </table>



                <!-- store bottom filter -->
                <div class="store-filter clearfix">
                  <span class="store-qty"></span>
                  <ul class="store-pagination">
                  <% for(let i=1;i<=totalPages;i++){%>
                      <% if(currentPage==i){%>
                          <li class="active"><a href="?page=<%= i %>"><%= i %></a></li>
                          <% }else{ %>
                      <li><a href="?page=<%= i %>"><%= i %></a></li>
                          <% } %>

                            <% }%>
            
                  </ul>
                  <!-- <i class="fa fa-angle-right"></i> -->
              </div>
              <!-- /store bottom filter -->
                
            </div>
        </div>
    </div>
