<!-- checkuot razorpay -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>

<script>
  const err = document.getElementById('err');
  document.getElementById('wallet-form').addEventListener('submit', (event)=>{
    event.preventDefault();
    const amount = document.getElementById('amount').value.trim()
    if(!amount){
      event.preventDefault();
    }

    if(amount<=0){
      event.preventDefault();
      err.innerHTML='Amount cannot be negative!'
    }
    $.ajax({
      url:'/profile/addMoneyToWallet',
      method:'post',
      data:{amount},
      success: (res)=>{
        if(res.status){
          console.log('RazorPay');
          razorpayPayment(res.payment)
        }else{
          location.href='/wallet'
          console.log('status false redirecting to walletHistory');
        }
      }
    })

  });


  //  -------------------------------------- Razorpay ---------------------------------//
  function razorpayPayment(order) {
    console.log('entered to razorpay', order);

    var options = {
      key: 'rzp_test_2bImS12F9bn0vK',
      amount: order.amount * 100,
      currency: 'INR',
      name: 'Power_Eelectricals',
      description: 'Test Transaction',
      image: '/images/my_Logo.png',
      order_id: order.id,
      handler: function (response) {
        verifyPayment(response, order);
        console.log(response);
      },
      prefill: {
        name: 'Customer Name',
        email: 'customer@example.com',
        contact: '1234567890',
      },
      notes: {
        address: order.address,
      },
      theme: {
        color: '#F37254',
      },
    };

    var razorpayInstance = new Razorpay(options);
    razorpayInstance.open();
  };

  function verifyPayment(payment, order){
    console.log('payment, order',payment, order);

    $.ajax({

      url:'/verifyWalletpayment',
      method:'post',
      data:{payment,order},
      success:(res)=>{
        if(res.status){
          Swal.fire({
            icon: "success",
            title: "Your amount has been saved",
            showConfirmButton: false,
            timer:1500
        }).then(()=>{

          location.href='/walletHistory'
        })
        }else{
          location.href='/wallet'
          alert('Payment Failed');
        }
      }

    })

  };

</script>


